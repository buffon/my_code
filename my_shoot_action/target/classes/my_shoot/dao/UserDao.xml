<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="my_shoot.service.dao.UserDao">
    <select id="list"  resultType="User">
        SELECT
        id,
        name,
        sex
        FROM
        USER
    </select>

    <select id="findByName" parameterType="User" resultType="User">
        SELECT
        id,
        name,
        sex,
        common,
        age
        FROM
        USER where name=#{name}
    </select>

    <select id="findByNameForUpdate" parameterType="User" resultType="User">
        SELECT
        id,
        name,
        sex,
        common,
        age
        FROM
        USER where name=#{name} for update
    </select>

    <update id="updateById" parameterType="User">
        update
        USER
        set name=#{name}
        where id=#{id}
    </update>
</mapper>